{% load static %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Social Network{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="{% static 'network/styles.css' %}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/4984a29c3b.js" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 main-area sidebar-sticky sticky-top">
                <nav class="navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item main-logo list-link-item">
                            <a><i class="fas fa-fan"></i></a>
                        </li>
                        <li class="nav-item list-link-item">
                            <a><i class="fas fa-home link-item"></i><b>Home</b></a>
                        </li>
                        <li class="nav-item list-link-item">
                            <a><i class="fas fa-hashtag link-item"></i><b>Following</b></a>
                        </li>
                        <li class="nav-item list-link-item">
                            <a><i class="far fa-bell link-item"></i><b>Notifications</b></a>
                        </li>
                        <li class="nav-item list-link-item">
                            <a><i class="far fa-envelope link-item"></i><b>Messages</b></a>
                        </li>
                        <li class="nav-item list-link-item">
                            <a><i class="far fa-bookmark link-item"></i><b>Bookmarks</b></a>
                        </li>
                        <li class="nav-item list-link-item">
                            <a><i class="far fa-list-alt link-item"></i><b>Lists</b></a>
                        </li>
                        <li class="nav-item list-link-item">
                            <a><i class="far fa-user link-item"></i><b>Profile</b></a>
                        </li>
                    </ul>
                </nav>
                <button class="btn btn-primary logout-button">Log out</button>
                <div class="user-info-left-menu">
                    <p>{{ user }}</p>
                    <p>@{{ user }}</p>
                </div>
            </div>
            <div class="col-md-6 main-area">
                <div class="body-header row">
                    {{ body_header }}
                    <b>All Posts</b>
                </div>
                <div class="post-form row">
                    <form method="POST" action="/">
                        {% csrf_token %}
                            {{ form }}
                        {% if object %}
                            hihi
                        {% endif %}
                    </form>
                </div>
                <div class="news-feed row">
                {% block posts %}
                {% endblock %}
                </div>
            </div>
            <div class="col-md-3 main-area"></div>
        </div>
    </div>
</body>
</html>